mixin social(object, modificator)
	ul(class="social "+ ((!modificator) ? '' : 'social_#{modificator}'))
		each value, key in object
			li(class="social__item social__item_#{key}")
				a(href="#{value}" target="_blank" title="#{value}" class="social__link")= value

mixin radio(object)
	ul.filter__sub-list
		each item, index in object
			li.filter__sub-item
				label.filter__label.filter__label_radio
					input(type="radio" name="position").filter__input.filter__input_radio
					span.filter__text= item

mixin checkbox(object)
	ul.filter__sub-list
		each item in object
			li.filter__sub-item
				label.filter__label.filter__label_checkbox
					input(type="checkbox" name="brend").filter__input.filter__input_checkbox
					span.filter__text= item
		li.filter__reset-item
			a(href="#").filter__reset-link Сбросить фильтр
mixin price()
	.price
		label.price__label
			span.price__text от
			input(type="text").price__input.price__input_lower
		label.price__label
			span.price__text до
			input(type="text").price__input.price__input_upper
mixin color(object)
	ul.filter__sub-list.filter__sub-list_color
		each item in object
			li.filter__sub-item
				a(href="#" style="color:\##{item}").filter__link