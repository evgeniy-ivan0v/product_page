- var sortOption = ['по цене','по популярности']
- var viewClass = ['list-full', 'list-thumbnail', 'view-list']

.product-panel
	.sort
		span.sort__text Сортировать по
		select.sort__select
			each item in sortOption
				option.sort__option= item
	.view
		span.view__text Вид каталога
		ul.view__list
			each item in viewClass
				li(class="view__item view__item_#{item}")
					a(href="#" class="view__link view__link_#{item}" data-view="#{item}")

